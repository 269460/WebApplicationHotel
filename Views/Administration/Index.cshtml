        @*         @foreach (var room in Model) *@
        @*         { *@
        @*             <tr> *@
        @*                 <td>@room.Number</td> *@
        @*                 <td>@room.Description</td> *@
        @*                 <td>@room.Capacity</td> *@
        @*                 <td>@(room.IsAvailable ? "Dostępny" : "Niedostępny")</td> *@
        @*             </tr> *@
        @*         } *@
        @*     </tbody> *@
        @* </table> *@
    </div>
</body>
</html>
